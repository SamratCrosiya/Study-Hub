                            <pre><code id="code-21">// Frontend JavaScript - Call your backend instead of external API

// Weather function using your backend
async function getWeather(city) {
  try {
    const response = await fetch(`http://localhost:3000/api/weather/${city}`);
    
    if (!response.ok) {
      throw new Error('City not found');
    }
    
    const data = await response.json();
    console.log('Weather:', data);
    return data;
  } catch (error) {
    console.error('Error:', error);
  }
}

// GitHub function using your backend
async function getGitHubUser(username) {
  try {
    const response = await fetch(`http://localhost:3000/api/github/${username}`);
    
    if (!response.ok) {
      throw new Error('User not found');
    }
    
    const data = await response.json();
    console.log('GitHub User:', data);
    return data;
  } catch (error) {
    console.error('Error:', error);
  }
}

// Usage
getWeather('London');
getGitHubUser('torvalds');</code></pre>
