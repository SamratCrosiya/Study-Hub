                <div class="topic-card">
                    <div class="topic-title"><i class="fas fa-expand-arrows-alt"></i> Destructuring & Spread</div>
                    <div class="code-container">
                        <button class="copy-btn" onclick="copyCode(this, 'code-9')">
                            <i class="fas fa-copy"></i> Copy
                        </button>
                        <pre><code id="code-9">// Object Destructuring
let person = {
  name: "Alice",
  age: 28,
  city: "NYC"
};

let { name, age } = person;

// Array Destructuring
let colors = ["red", "green", "blue"];
let [first, second, third] = colors;

// Rest operator
let [head, ...tail] = colors;

// Spread Operator
let arr1 = [1, 2, 3];
let arr2 = [4, 5, 6];
let combined = [...arr1, ...arr2];

// Swapping variables
let a = 1, b = 2;
[a, b] = [b, a];</code></pre>
