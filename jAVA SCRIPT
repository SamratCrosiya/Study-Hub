for (let i = 0; i < 5; i++) {
  console.log(`Count: ${i}`);
}

// While Loop
let count = 0;
while (count < 5) {
  console.log(`Count: ${count}`);
  count++;
}

// For...of Loop (arrays)
let fruits = ["apple", "banana", "orange"];
for (let fruit of fruits) {
  console.log(fruit);
}

// For...in Loop (objects)
let person = { name: "John", age: 25 };
for (let key in person) {
  console.log(`${key}: ${person[key]}`);
}</code></pre>
