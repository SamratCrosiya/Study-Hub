function greet(name) {
  return `Hello, ${name}!`;
}

// Function Expression
const add = function(a, b) {
  return a + b;
};

// Arrow Functions (ES6+)
const multiply = (a, b) => a * b;
const square = x => x * x;

// Default Parameters
function greetUser(name = "Guest") {
  return `Welcome, ${name}!`;
}

// Rest Parameters
function sum(...numbers) {
  return numbers.reduce((total, num) => total + num, 0);
}
console.log(sum(1, 2, 3, 4, 5));  // 15</code></pre>
                    </div>
