    <script>
        // Toggle section visibility
        function toggleSection(sectionId) {
            const section = document.getElementById(`section-${sectionId}`);
            const icon = document.getElementById(`icon-${sectionId}`);
            
            section.classList.toggle('active');
            
            if (section.classList.contains('active')) {
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-up');
            } else {
                icon.classList.remove('fa-chevron-up');
                icon.classList.add('fa-chevron-down');
            }
        }

        // Copy code to clipboard
        function copyCode(button, codeId) {
            const code = document.getElementById(codeId).textContent;
            navigator.clipboard.writeText(code).then(() => {
                const originalHTML = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i> Copied!';
                button.classList.add('copied');
                
                setTimeout(() => {
                    button.innerHTML = originalHTML;
                    button.classList.remove('copied');
                }, 2000);
            });
        }

        // Weather API Function (Demo)
        async function getWeather() {
            const city = document.getElementById('cityInput').value.trim();
            const loading = document.getElementById('loading');
            const resultDiv = document.getElementById('weatherResult');
            
            if (!city) {
                alert('Please enter a city name');
                return;
            }
            
            loading.style.display = 'block';
            resultDiv.innerHTML = '';
            
            try {
                // Using OpenWeatherMap API (you need to get a free API key)
                const apiKey = 'demo'; // Replace with your actual API key
                const url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric`;
                
                // For demo purposes, we'll simulate a response
                setTimeout(() => {
                    loading.style.display = 'none';
                    resultDiv.innerHTML = `
                        <div class="weather-card">
                            <h4><i class="fas fa-map-marker-alt"></i> ${city}</h4>
                            <div class="weather-icon">
                                <i class="fas fa-cloud-sun"></i>
                            </div>
                            <h2>22Â°C</h2>
                            <p style="font-size: 1.2rem; text-transform: capitalize;">Partly Cloudy</p>
                            <div class="row mt-3">
                                <div class="col-6">
                                    <i class="fas fa-tint"></i> Humidity: 65%
                                </div>
                                <div class="col-6">
                                    <i class="fas fa-wind"></i> Wind: 5.2 m/s
                                </div>
                            </div>
                            <div class="alert alert-info mt-3">
                                <small><i class="fas fa-info-circle"></i> To use real data, get a free API key from <a href="https://openweathermap.org/api" target="_blank" class="text-white"><u>OpenWeatherMap</u></a> and set up the backend server as shown above.</small>
                            </div>
                        </div>
                    `;
                }, 1000);
                
            } catch (error) {
                loading.style.display = 'none';
                resultDiv.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i> Error: ${error.message}
                    </div>
                `;
            }
        }

        // GitHub API Function (Demo)
        async function getGitHubUser() {
            const username = document.getElementById('githubInput').value.trim();
            const loading = document.getElementById('githubLoading');
            const resultDiv = document.getElementById('githubResult');
            
            if (!username) {
                alert('Please enter a GitHub username');
                return;
            }
            
            loading.style.display = 'block';
            resultDiv.innerHTML = '';
            
            try {
                const response = await fetch(`https://api.github.com/users/${username}`);
                
                if (!response.ok) {
                    throw new Error('User not found');
                }
                
                const data = await response.json();
                
                loading.style.display = 'none';
                resultDiv.innerHTML = `
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-3 text-center">
                                    <img src="${data.avatar_url}" class="rounded-circle img-fluid" style="max-width: 150px;">
                                </div>
                                <div class="col-md-9">
                                    <h4 class="mb-1">${data.name || data.login}</h4>
                                    <p class="text-muted mb-2">@${data.login}</p>
                                    <p class="mb-3">${data.bio || 'No bio available'}</p>
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <strong>${data.public_repos}</strong><br>
                                            <small class="text-muted">Repos</small>
                                        </div>
                                        <div class="col-4">
                                            <strong>${data.followers}</strong><br>
                                            <small class="text-muted">Followers</small>
                                        </div>
                                        <div class="col-4">
                                            <strong>${data.following}</strong><br>
                                            <small class="text-muted">Following</small>
                                        </div>
                                    </div>
                                    ${data.location ? `<p class="mt-3 mb-0"><i class="fas fa-map-marker-alt"></i> ${data.location}</p>` : ''}
                                    <a href="${data.html_url}" target="_blank" class="btn btn-dark btn-sm mt-3">
                                        <i class="fab fa-github"></i> View Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
            } catch (error) {
                loading.style.display = 'none';
                resultDiv.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i> Error: ${error.message}
                    </div>
                `;
            }
        }

        // Allow Enter key to trigger searches
        document.getElementById('cityInput')?.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') getWeather();
        });

        document.getElementById('githubInput')?.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') getGitHubUser();
        });

        // Smooth scroll to top button
        window.addEventListener('scroll', () => {
            const scrollBtn = document.getElementById('scrollTopBtn');
            if (scrollBtn) {
                if (window.pageYOffset > 300) {
                    scrollBtn.style.display = 'block';
                } else {
                    scrollBtn.style.display = 'none';
                }
            }
        });

