        <!-- Section 7: API Integration -->
        <div class="section-card">
            <div class="section-header" onclick="toggleSection(7)">
                <h3><i class="fas fa-server"></i> API Integration (Frontend)</h3>
                <i class="fas fa-chevron-down" id="icon-7"></i>
