                        <pre><code id="code-23">// Optional Chaining
const user = {
  name: "John",
  address: {
    city: "NYC"
  }
};
console.log(user.address?.city); // "NYC"
console.log(user.phone?.number); // undefined (no error)

// Nullish Coalescing
let value = null;
let result = value ?? "default"; // "default"
let result2 = 0 ?? "default";    // 0 (not default!)

// Template Literals
const name = "Alice";
const age = 25;
const message = `
  Hello ${name}!
  You are ${age} years old.
  Next year you'll be ${age + 1}.
`;

// Array Methods - flatMap, flat
const nested = [[1, 2], [3, 4], [5]];
console.log(nested.flat()); // [1, 2, 3, 4, 5]

const numbers = [1, 2, 3];
const doubled = numbers.flatMap(x => [x, x * 2]);
// [1, 2, 2, 4, 3, 6]

// Object.fromEntries
const entries = [['name', 'John'], ['age', 30]];
const obj = Object.fromEntries(entries);
// { name: 'John', age: 30 }

// Dynamic Import
async function loadModule() {
  const module = await import('./myModule.js');
  module.doSomething();
}</code></pre>
